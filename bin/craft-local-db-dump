#!/bin/bash

# DEFAULTS
# =========================================================================

help=""

# get options/arguments
while getopts :h option
do
    case "${option}"
    in
        h) help="help";;
    esac
done

# display help

if [[ "${help}" == "help" ]]; then
cat << EOF

-------------------------------------------------------------------------
HELP
-------------------------------------------------------------------------

Erstellt einen DB-Dump aus der aktuellen Lokalen Nitro DB.
Schreibt ein File mit Pfad db/db.sql

Anforderungen:
Du musst im Hauptverzeichnis eines Projekts sein, damit das klappt.
Der Dump db/db.sql muss vorhanden sein.
Nitro muss korrekt konfiguriert sein, da der Dump über nitro passiert.

-------------------------------------------------------------------------

EOF
exit
fi

# Prüfe, Verzeichnisse und Files
if [ ! -d db ]
then
    echo "Kann kein db/ Verzeichnis finden. "; echo "Abbruch"; echo ""
    exit
fi


# read .siteconfig.yaml
. yaml-read

# Check DB vars
if [ -z $local_db_name ] || [ -z $local_db_user ] || [ -z $local_db_pwd ]; then
    cat << EOF

Es sind nicht alle nötigen Variabeln in .siteconfig.yaml definiert:

    local_db_name:  $local_db_name
    local_db_user:  $local_db_user
    local_db_pwd:   $local_db_pwd
EOF
exit
fi


echo "DB dump aus lokaler DB…"; echo

# Dump DB
# mysqldump --user=${local_db_user} --host=localhost --password=${local_db_pwd} --opt --default-character-set=utf8 ${local_db_name} > db/db.sql
OUTPUT=$(nitro db backup db/db.sql -m nitro-dev << EOF
2
EOF
)

regex=".*([0-9]) - ${local_db_name}.*"
[[ $OUTPUT =~ $regex ]]
db_select=${BASH_REMATCH[1]};


OUTPUT=$(nitro db backup db/db.sql -m nitro-dev << EOF
$db_select
EOF
)

#echo "----${OUTPUT}";
regex='.*stored in "(.*)"\.'
[[ $OUTPUT =~ $regex ]]
db_backup=${BASH_REMATCH[1]};

rm db/db.sql
cp $db_backup db/db.sql

echo "Dump in db/db.sql gespeichert"; echo
