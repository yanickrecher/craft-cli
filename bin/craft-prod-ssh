#!/bin/bash

# DEFAULTS
# =========================================================================

help=""

# get options/arguments
while getopts :h option
do
    case "${option}"
    in
        h) help="help";;
    esac
done


# display help
# -------------------------------------------------------------------------

if [[ "${help}" == "help" ]]; then
cat << EOF

-------------------------------------------------------------------------
HELP
-------------------------------------------------------------------------

ssh auf den Prod-Webserver des aktuellen Projekts

-------------------------------------------------------------------------

EOF
exit
fi

if [ ! -e .siteconfig.yaml ]; then
    "Kein .siteconfig.yaml File gefunden. "; echo "Abbruch"; echo
    exit
fi

# read .siteconfig.yaml
. yaml-read

# Check siteconfig vars
if [ -z $prod_username ] || [ -z $prod_domain ] || [ -z $prod_path ]; then
    cat << EOF

Es sind nicht alle nÃ¶tigen Variabeln in .siteconfig.yaml definiert:

    prod_username: $prod_username
    prod_domain:   $prod_domain
    prod_db_host:  $prod_path
EOF
exit
fi

# SSH auf den Server
ssh -t ${prod_username}@${prod_domain} "cd ${prod_path} && cd .. ; bash"


